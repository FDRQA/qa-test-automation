const { chromium } = require('playwright');

(async () => {
    const browser = await chromium.launch({ headless: false });
    const page = await browser.newPage();

    console.log("ðŸ“Œ Mueve el cursor sobre la rueda âš™ y observa las coordenadas en la consola.");
    console.log("â³ Espera... La posiciÃ³n se actualizarÃ¡ cada 2 segundos.");
    console.log("ðŸ”Ž Cuando tengas la coordenada exacta, anÃ³tala y presiona CTRL + C para salir.");

    try {
        while (true) {
            const coords = await page.evaluate(() => {
                return new Promise(resolve => {
                    document.addEventListener('mousemove', event => {
                        resolve({ x: event.clientX, y: event.clientY });
                    }, { once: true });
                });
            });

            console.log(`ðŸ“ Coordenadas actuales: X=${coords.x}, Y=${coords.y}`);
            await new Promise(resolve => setTimeout(resolve, 2000)); // Esperar 2 segundos
        }
    } catch (error) {
        console.log("\nâœ… Coordenadas obtenidas. Ahora puedes usarlas en el script.");
    }
})();